{
  "name": "aremycolorsaccessible",
  "version": "1.3.0",
  "scripts": {
    "now-build": "next build",
    "build": "next build",
    "dev": "next",
    "analyze_bundle": "BUNDLE_ANALYZE=both yarn build",
    "analyze_bundle:browser": "BUNDLE_ANALYZE=browser yarn build",
    "analyze_bundle:server": "BUNDLE_ANALYZE=server yarn build",
    "jest": "NODE_ENV=test jest",
    "lint": "eslint './**/*.{js,jsx,ts,tsx}' --max-warnings 0 --format codeframe",
    "bundlesize": "bundlesize",
    "test": "yarn lint && NODE_ENV=test jest",
    "cypress:open": "yarn dev & cypress open",
    "cypress:run": "cypress run",
    "tsc": "tsc",
    "gen": "plop --plopfile generators/plopfile.js",
    "gen:common": "plop --plopfile generators/plopfile.js common",
    "gen:component": "plop --plopfile generators/plopfile.js component",
    "gen:page": "plop --plopfile generators/plopfile.js page"
  },
  "author": "Simon Taggart <me@simontaggart.com> (http://simontaggart.com/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SiTaggart/AreMyColorsAccessible"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/core": "7.4.5",
    "@emotion/core": "10.0.10",
    "@emotion/styled": "10.0.12",
    "@zeit/next-bundle-analyzer": "0.1.2",
    "@zeit/next-css": "1.0.1",
    "@zeit/next-typescript": "1.1.1",
    "ajv": "6.10.0",
    "autoprefixer": "9.6.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-plugin-emotion": "10.0.13",
    "classnames": "2.2.6",
    "color": "3.1.2",
    "lodash": "4.17.11",
    "next": "8.1.0",
    "next-compose-plugins": "2.2.0",
    "node-sass": "4.12.0",
    "normalize.css": "8.0.1",
    "polished": "3.4.1",
    "prop-types": "15.7.2",
    "query-string": "6.8.1",
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "overrides": [
      {
        "files": "**/*.scss",
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "devDependencies": {
    "@types/classnames": "2.2.8",
    "@types/color": "3.0.0",
    "@types/compression": "0.0.36",
    "@types/enzyme": "3.9.4",
    "@types/express": "4.17.0",
    "@types/jest": "24.0.15",
    "@types/lodash": "4.14.134",
    "@types/next": "8.0.5",
    "@types/node": "11.13.15",
    "@types/query-string": "6.3.0",
    "@types/react": "16.8.22",
    "@types/react-dom": "16.8.4",
    "@types/react-test-renderer": "16.8.2",
    "@typescript-eslint/eslint-plugin": "1.11.0",
    "@typescript-eslint/parser": "1.11.0",
    "acorn": "6.1.1",
    "babel-eslint": "10.0.2",
    "babel-jest": "24.8.0",
    "bundlesize": "0.17.2",
    "cypress": "3.3.1",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "5.0.0",
    "eslint-config-standard": "12.0.0",
    "eslint-config-standard-jsx": "6.0.2",
    "eslint-plugin-cypress": "2.2.1",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-react": "7.13.0",
    "eslint-plugin-standard": "4.0.0",
    "husky": "2.4.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "24.8.0",
    "jest-emotion": "10.0.11",
    "listr": "0.14.3",
    "plop": "2.4.0",
    "precise-commits": "1.0.2",
    "prettier": "1.18.2",
    "react-addons-test-utils": "15.6.2",
    "react-test-renderer": "16.8.6",
    "regenerator-runtime": "0.13.2",
    "typescript": "3.4.5"
  },
  "bundlesize": [
    {
      "path": "./.next/static/**/pages/*.js",
      "maxSize": "15 kB"
    },
    {
      "path": "./.next/static/chunks/*.js",
      "maxSize": "100 kB"
    },
    {
      "path": "./.next/static/runtime/*.js",
      "maxSize": "10 kB"
    },
    {
      "path": "./.next/static/css/*.css",
      "maxSize": "3 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "precise-commits"
    }
  }
}
