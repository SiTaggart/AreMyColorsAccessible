{
  "name": "aremycolorsaccessible",
  "version": "1.3.0",
  "scripts": {
    "now-build": "next build",
    "build": "next build",
    "dev": "next",
    "now-dev": "next",
    "bundlesize": "bundlesize",
    "jest": "NODE_ENV=test jest",
    "jest:coverage": "yarn jest --coverage",
    "lint": "eslint './**/*.{js,jsx,ts,tsx}' --max-warnings 0 --format codeframe",
    "test": "yarn lint && NODE_ENV=test jest",
    "cypress": "start-server-and-test dev http://localhost:3000 cypress:open",
    "cypress:open": "cypress open",
    "cypress:run": "yarn percy:exec cypress run",
    "cypress:ci": "start-server-and-test dev http://localhost:3000 cypress:run",
    "percy": "percy",
    "percy:exec": "percy exec --",
    "tsc": "tsc",
    "gen": "plop --plopfile generators/plopfile.js",
    "gen:common": "plop --plopfile generators/plopfile.js common",
    "gen:component": "plop --plopfile generators/plopfile.js component",
    "gen:page": "plop --plopfile generators/plopfile.js page"
  },
  "author": "Simon Taggart <me@simontaggart.com> (http://simontaggart.com/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SiTaggart/AreMyColorsAccessible"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/core": "7.6.3",
    "@emotion/core": "10.0.21",
    "@emotion/styled": "10.0.17",
    "@zeit/next-css": "1.0.1",
    "@zeit/next-typescript": "1.1.1",
    "babel-plugin-emotion": "10.0.21",
    "color": "3.1.2",
    "color-combos": "1.0.0",
    "lodash": "4.17.15",
    "next": "9.1.1",
    "node-sass": "4.12.0",
    "normalize.css": "8.0.1",
    "polished": "3.4.1",
    "query-string": "6.8.3",
    "react": "16.10.2",
    "react-dom": "16.10.2"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "overrides": [
      {
        "files": "**/*.scss",
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "devDependencies": {
    "@emotion/babel-preset-css-prop": "10.0.17",
    "@percy/cypress": "2.1.1",
    "@testing-library/react-hooks": "2.0.3",
    "@types/color": "3.0.0",
    "@types/enzyme": "3.10.3",
    "@types/jest": "24.0.18",
    "@types/lodash": "4.14.142",
    "@types/next": "8.0.6",
    "@types/node": "11.13.22",
    "@types/query-string": "6.3.0",
    "@types/react": "16.9.5",
    "@types/react-dom": "16.9.1",
    "@types/react-test-renderer": "16.9.0",
    "@typescript-eslint/eslint-plugin": "2.3.3",
    "@typescript-eslint/parser": "2.3.3",
    "babel-eslint": "10.0.3",
    "babel-jest": "24.9.0",
    "bundlesize": "0.18.0",
    "cypress": "3.4.1",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "eslint": "6.5.1",
    "eslint-config-prettier": "6.4.0",
    "eslint-config-standard": "14.1.0",
    "eslint-config-standard-jsx": "8.1.0",
    "eslint-plugin-cypress": "2.7.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.16.0",
    "eslint-plugin-react-hooks": "2.1.2",
    "eslint-plugin-standard": "4.0.1",
    "husky": "3.0.8",
    "jest": "24.9.0",
    "jest-emotion": "10.0.17",
    "plop": "2.4.0",
    "precise-commits": "1.0.2",
    "prettier": "1.18.2",
    "react-addons-test-utils": "15.6.2",
    "react-test-renderer": "16.10.2",
    "start-server-and-test": "1.10.4",
    "typescript": "3.6.3"
  },
  "bundlesize": [
    {
      "path": "./.next/static/**/pages/*.js",
      "maxSize": "12 kB"
    },
    {
      "path": "./.next/static/chunks/*.js",
      "maxSize": "100 kB"
    },
    {
      "path": "./.next/static/runtime/*.js",
      "maxSize": "10 kB"
    },
    {
      "path": "./.next/serverless/pages/*.js",
      "maxSize": "180 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "precise-commits"
    }
  }
}
