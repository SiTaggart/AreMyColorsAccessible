{
  "name": "aremycolorsaccessible",
  "version": "1.3.0",
  "scripts": {
    "now-build": "next build",
    "build": "next build",
    "dev": "next",
    "now-dev": "next",
    "bundlesize": "bundlesize",
    "jest": "NODE_ENV=test jest",
    "jest:coverage": "yarn jest --coverage",
    "lint": "eslint './**/*.{js,jsx,ts,tsx}' --format codeframe",
    "test": "yarn lint && NODE_ENV=test jest",
    "cypress": "start-server-and-test dev http://localhost:3000 cypress:open",
    "cypress:open": "cypress open",
    "cypress:run": "yarn percy:exec cypress run",
    "cypress:ci": "start-server-and-test dev http://localhost:3000 cypress:run",
    "percy": "percy",
    "percy:exec": "percy exec --",
    "prettier": "prettier --list-different './**/*.{js,jsx,ts,tsx}'",
    "prettier-clean": "prettier --write './**/*.{js,jsx,ts,tsx}'",
    "tsc": "tsc",
    "gen": "plop --plopfile generators/plopfile.js",
    "gen:common": "plop --plopfile generators/plopfile.js common",
    "gen:component": "plop --plopfile generators/plopfile.js component",
    "gen:page": "plop --plopfile generators/plopfile.js page"
  },
  "engines": { "node": "12.6.0" },
  "author": "Simon Taggart <me@simontaggart.com> (http://simontaggart.com/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SiTaggart/AreMyColorsAccessible"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/core": "7.7.7",
    "@emotion/core": "10.0.22",
    "@emotion/css": "10.0.22",
    "@emotion/styled": "10.0.23",
    "@zeit/next-css": "1.0.1",
    "@zeit/next-typescript": "1.1.1",
    "babel-plugin-emotion": "10.0.23",
    "color": "3.1.2",
    "color-combos": "1.0.0",
    "lodash": "4.17.15",
    "next": "9.1.6",
    "normalize.css": "8.0.1",
    "polished": "3.4.2",
    "query-string": "6.9.0",
    "react": "16.12.0",
    "react-dom": "16.12.0"
  },
  "devDependencies": {
    "@emotion/babel-preset-css-prop": "10.0.23",
    "@percy/cypress": "2.2.0",
    "@sitaggart/eslint-config-ts": "0.5.27",
    "@sitaggart/prettier-config": "0.2.0",
    "@testing-library/react-hooks": "2.0.3",
    "@types/color": "3.0.0",
    "@types/enzyme": "3.10.4",
    "@types/jest": "24.0.24",
    "@types/lodash": "4.14.149",
    "@types/next": "8.0.7",
    "@types/node": "12.12.19",
    "@types/query-string": "6.3.0",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "@types/react-test-renderer": "16.9.1",
    "@typescript-eslint/eslint-plugin": "2.12.0",
    "@typescript-eslint/parser": "2.12.0",
    "babel-jest": "24.9.0",
    "bundlesize": "0.18.0",
    "cypress": "3.8.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "eslint": "6.8.0",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "jest-emotion": "10.0.26",
    "plop": "2.5.3",
    "precise-commits": "1.0.2",
    "prettier": "1.19.1",
    "react-addons-test-utils": "15.6.2",
    "react-test-renderer": "16.12.0",
    "start-server-and-test": "1.10.6",
    "typescript": "3.7.4"
  },
  "bundlesize": [
    {
      "path": "./.next/static/**/pages/*.js",
      "maxSize": "12 kB"
    },
    {
      "path": "./.next/static/chunks/*.js",
      "maxSize": "100 kB"
    },
    {
      "path": "./.next/static/runtime/*.js",
      "maxSize": "10 kB"
    },
    {
      "path": "./.next/serverless/pages/*.js",
      "maxSize": "180 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "precise-commits"
    }
  }
}
