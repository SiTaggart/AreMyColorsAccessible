{
  "name": "aremycolorsaccessible",
  "version": "1.3.0",
  "scripts": {
    "clean": "rm -rf .next/",
    "build": "next build",
    "dev": "next",
    "bundlesize": "bundlesize",
    "jest": "NODE_ENV=test jest",
    "jest:coverage": "yarn jest --coverage",
    "lint": "eslint './**/*.{js,jsx,ts,tsx}' --format codeframe",
    "test": "yarn lint && NODE_ENV=test jest",
    "cypress": "start-server-and-test dev http://localhost:3000 cypress:open",
    "cypress:open": "cypress open",
    "cypress:run": "yarn percy:exec cypress run",
    "cypress:ci": "start-server-and-test dev http://localhost:3000 cypress:run",
    "percy": "percy",
    "percy:exec": "percy exec --",
    "prettier": "prettier --list-different './**/*.{js,jsx,ts,tsx}'",
    "prettier-clean": "prettier --write './**/*.{js,jsx,ts,tsx}'",
    "tsc": "tsc",
    "ci:checks": "yarn clean && yarn build && yarn lint && yarn tsc && yarn jest && yarn bundlewatch && yarn cypress:ci",
    "gen": "plop --plopfile generators/plopfile.js",
    "gen:common": "plop --plopfile generators/plopfile.js common",
    "gen:component": "plop --plopfile generators/plopfile.js component",
    "gen:page": "plop --plopfile generators/plopfile.js page",
    "prepare": "husky install"
  },
  "author": "Simon Taggart <me@simontaggart.com> (http://simontaggart.com/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SiTaggart/AreMyColorsAccessible"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/core": "7.13.8",
    "@emotion/css": "11.1.3",
    "@emotion/react": "11.1.5",
    "@emotion/styled": "11.1.5",
    "@twilio-paste/core": "8.0.2",
    "@twilio-paste/icons": "5.1.0",
    "@zeit/next-typescript": "1.1.1",
    "color": "3.1.3",
    "color-combos": "1.0.16",
    "cors": "2.8.5",
    "lodash": "4.17.21",
    "next": "10.1.3",
    "normalize.css": "8.0.1",
    "polished": "4.1.3",
    "prism-react-renderer": "1.2.1",
    "query-string": "6.14.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "11.2.0",
    "@emotion/eslint-plugin": "11.2.0",
    "@emotion/jest": "11.2.1",
    "@netlify/plugin-lighthouse": "2.1.2",
    "@netlify/plugin-nextjs": "3.7.1",
    "@percy/cypress": "2.3.4",
    "@sitaggart/eslint-config-ts": "0.5.311",
    "@sitaggart/prettier-config": "0.2.112",
    "@testing-library/react": "11.2.7",
    "@testing-library/react-hooks": "5.1.3",
    "@types/color": "3.0.2",
    "@types/cors": "2.8.12",
    "@types/jest": "25.2.3",
    "@types/lodash": "4.14.171",
    "@types/next": "8.0.7",
    "@types/node": "12.20.18",
    "@types/query-string": "6.3.0",
    "@types/react": "17.0.15",
    "@types/react-dom": "17.0.9",
    "@types/react-test-renderer": "17.0.1",
    "babel-jest": "26.6.3",
    "bundlewatch": "0.3.2",
    "cypress": "6.9.1",
    "eslint": "7.32.0",
    "husky": "5.2.0",
    "jest": "26.6.3",
    "netlify-plugin-cache-nextjs": "1.6.1",
    "pinst": "2.1.6",
    "plop": "2.7.4",
    "precise-commits": "1.0.2",
    "prettier": "2.2.1",
    "react-addons-test-utils": "15.6.2",
    "react-test-renderer": "17.0.2",
    "start-server-and-test": "1.12.6",
    "typescript": "4.2.3"
  },
  "bundlewatch": {
    "files": [
      {
        "path": "./.next/static/**/pages/*.js",
        "maxSize": "70 kB"
      },
      {
        "path": "./.next/static/chunks/*.js",
        "maxSize": "100 kB"
      },
      {
        "path": "./.next/server/pages/*.js",
        "maxSize": "580 kB"
      }
    ],
    "ci": {
      "trackBranches": [
        "main"
      ],
      "repoBranchBase": "main"
    }
  }
}
